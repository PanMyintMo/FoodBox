<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="5dip"
    android:paddingStart="10dip"
    android:paddingEnd="20dip"
    android:paddingBottom="25dip"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/cust_img"
        android:layout_width="73dp"
        android:layout_height="84dp"
        android:theme="@style/userImageShape"
        android:src="@drawable/itvision"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:srcCompat="@tools:sample/avatars" />
<LinearLayout
    android:layout_marginStart="10dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="title"
        android:layout_gravity="center_horizontal"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic"

      />
    <LinearLayout
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imglocation"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_location_on"
            tools:srcCompat="@tools:sample/avatars"
            />
        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kyaungshae,Hledan Road, Hledan Kyaung Ashae,Kamaryut Tsp,Yangon ,Yagon"
            android:textSize="12sp"
             android:maxLines="2"
            android:lines="2"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
 />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_phone"
            tools:srcCompat="@tools:sample/avatars" />
        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+959798217582"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical" app:layout_constraintHorizontal_bias="0.052"
           />
    </LinearLayout>
   <!-- <Button
        android:id="@+id/btnDirection"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:text="Get Direction"
        android:layout_width="100dp"
        android:layout_height="50dp">

    </Button>-->
</LinearLayout>

</LinearLayout>